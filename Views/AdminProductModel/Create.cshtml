@model LaCroute.Models.ProductModel

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutAdmin";
}

<div class="container">
    <div class="text-center">

        <div class="linkcontainer">
            <a class="btn link" asp-area="" asp-controller="Menu" asp-action="index">Voir le menu</a>
        </div>

        <h1>Ajouter un produit au menu</h1>

        <hr />
        <div class="row">
            <div class="col-md-4 mx-auto">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Intitulé</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label">Prix</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Thumbnail" class="control-label">Photo</label>
                        <input asp-for="Thumbnail" class="form-control" />
                        <span asp-validation-for="Thumbnail" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsAvailable" />
                            Au Menu
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="TypeId" class="control-label">Type</label>
                        <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                    </div>

                    @* <div class="form-group">
                        <label class="control-label">Selectionnez le(s) label(s) à attribuer à ce
                            produit :</label>
                        <div>
                            @foreach (var label in ViewBag.LabelId)
                            {
                                <input type="checkbox" id="label" name="label" value="@label.Value"/>
                                <label for="label">@label.Text</label>
                            }
                        </div>
                    </div> *@

                    <div class="form-group">
                        <input type="submit" value="Créer" class="btn btn-admin m-2" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-admin m-2">Retour</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

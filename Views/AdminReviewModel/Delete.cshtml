@model LaCroute.Models.ReviewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutAdmin";
}

<div class="container">
    <div class="text-center">

        <div class="linkcontainer">
            <a href="@Url.Action("Menu", "Home")" class="btn link">Voir le menu</a>
        </div>

        <h1>Supprimer l'avis</h1>

        <h2>Etes-vous sur de vouloir supprimer cet avis ?</h2>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Nom
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    Titre
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    Description
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    Evaluation
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Rating)
                </dd>
                <dt class="col-sm-2">
                    Date de cr√©ation
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.created_at)
                </dd>
                <dt class="col-sm-2">
                    Date de modification
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.updated_at)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Supprimer" class="btn btn-admin" />
                <a asp-action="Index" class="btn btn-admin">Retour</a>
            </form>
        </div>
    </div>
</div>
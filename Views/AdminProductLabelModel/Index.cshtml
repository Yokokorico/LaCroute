@model IEnumerable<LaCroute.Models.ProductLabelModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<div class="container">
    <div class="text-center">

        <div class="linkcontainer">
            <a href="@Url.Action("Menu", "Home")" class="btn link">Voir le menu</a>
        </div>

        <h1>Relations Produit/Label</h1>

        <p>
            <a asp-action="Create" class="btn btn-admin">Attribuer un label à un produit</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Produit
                    </th>
                    <th>
                        Label
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Label.Title)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-admin">Editer</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-admin">Détail</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-admin">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

@model LaCroute.Models.ProductLabelModel

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutAdmin";
}

<div class="container">
    <div class="text-center">

        <div class="linkcontainer">
            <a href="@Url.Action("Menu", "Home")" class="btn link">Voir le menu</a>
        </div>

        <h1>Attribuer un label à un produit</h1>

        <hr />
        <div class="row">
            <div class="col-md-4 mx-auto">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">Produit</label>
                        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="LabelId" class="control-label">Label</label>
                        <select asp-for="LabelId" class="form-control" asp-items="ViewBag.LabelId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Créer" class="btn btn-admin m-2" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-admin m-2">Retour</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model LaCroute.Models.ProductLabelModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutAdmin";
}

<div class="container">
    <div class="text-center">

        <div class="linkcontainer">
            <a href="@Url.Action("Menu", "Home")" class="btn link">Voir le menu</a>
        </div>

        <h1>Supprimer la relation Produit/Label</h1>

        <h2>Etes-vous sur de vouloir supprimer cette relation ?</h2>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Id du produit
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Id)
                </dd>
                <dt class="col-sm-2">
                    Produit
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Title)
                </dd>
                <dt class="col-sm-2">
                    Id du label
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Label.Id)
                </dd>
                <dt class="col-sm-2">
                    Label
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Label.Title)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Supprimer" class="btn btn-admin" />
                <a asp-action="Index" class="btn btn-admin">Retour</a>
            </form>
        </div>
    </div>
</div>
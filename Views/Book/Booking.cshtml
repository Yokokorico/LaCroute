@model LaCroute.Models.BookingModel
<div class="container">
    <div class="row pb-5 ">
        <div class="col-12 col-md-6 mb-5 pb-5 bg-white form-border">
            <form asp-action="Booking" method="post" class="padding-form">
                <div class="row text-center border-bottom mb-3">
                    <h3 class="pb-2 pt-2 ">Réservation</h3>
                </div>
                <div class="row d-flex justify-content-center">

                        <div class="input-group mb-3 w-75">
                            <span class="input-group-text" id="basic-addon1">
                                <label asp-for="date">Date
                                </label>
                            </span>
                            <input type="date" asp-for="date" class="form-control" placeholder="JJ/MM/AAAA" min='@DateTime.Now.ToString("yyyy-MM-dd")' />
                        </div>
                        @if (ViewData.ModelState.TryGetValue("date", out var dateErrors) && dateErrors.Errors.Any())
                        {
                            <div class="alert alert-danger mb-3" role="alert">
                                @foreach (var error in dateErrors.Errors)
                                {
                                    <span class="text-danger">@error.ErrorMessage</span>
                                }
                            </div>
                        }

                </div>
                <div class="row text-center">
                    <h3>Service du jour</h3>
                    <div class="btn-group mb-2" role="group" aria-label="Basic radio toggle button group">
                            <input type="radio" id="btnradio1" class="btn-check " asp-for="time" value="11:00:00"
                                autocomplete="off" required />
                            <label class="btn btn-outline-primary" for="btnradio1">
                                11h-12h</label>

                            <input type="radio" id="btnradio2" class="btn-check " asp-for="time" value="12:00:00"
                                autocomplete="off" required />
                            <label class="btn btn-outline-primary" for="btnradio2">12h-13h</label>

                            <input type="radio" id="btnradio3" class="btn-check " asp-for="time" value="13:00:00"
                                autocomplete="off" required />
                            <label class="btn btn-outline-primary" for="btnradio3">13h-14h</label>
                        </div>
                </div>
                <div class="row text-center">
                    <h3>Service du soir</h3>
                    <div class="btn-group mb-5" role="group" aria-label="Basic radio toggle button group">
                            <input type="radio" id="btnradio4" class="btn-check " asp-for="time" value="18:00:00"
                                autocomplete="off" required />
                            <label class="btn btn-outline-primary" for="btnradio4">
                                18h-19h</label>

                            <input type="radio" id="btnradio5" class="btn-check " asp-for="time" value="19:00:00"
                                autocomplete="off" required />
                            <label class="btn btn-outline-primary" for="btnradio5">19h-20h</label>

                            <input type="radio" id="btnradio6" class="btn-check " asp-for="time" value="20:00:00"
                                autocomplete="off" required />
                            <label class="btn btn-outline-primary" for="btnradio6">20h-21h</label>

                        <span asp-validation-for="time" class="text-danger field-validation-error"></span>
                </div>
                        
                <div class="row">
                    <div class="col">
                        <div class="input-group mb-3 ">
                            <span class="input-group-text" id="basic-addon1">
                                <label for="name">Nom</label>
                            </span>
                            <input type="text" class="form-control" placeholder="Nom" aria-label="name"
                                aria-describedby="basic-addon1" asp-for="name">
                        </div>
                        @if (ViewData.ModelState.TryGetValue("name", out var nameError) && nameError.Errors.Any())
                        {
                            <div class="alert alert-danger mb-3" role="alert">
                                @foreach (var error in nameError.Errors)
                                {
                                    <span class="text-danger">@error.ErrorMessage</span>
                                }
                            </div>
                        }
                    </div>
                    <div class="col">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">
                                <label for="">Tél</label>
                            </span>
                            <input type="text" class="form-control" placeholder="Numéro de téléphone" aria-label="phoneNumber"
                                aria-describedby="basic-addon1" asp-for="phoneNumber">
                        </div>
                        @if (ViewData.ModelState.TryGetValue("phoneNumber", out var phoneNumberError) &&
                        phoneNumberError.Errors.Any())
                        {
                            <div class="alert alert-danger mb-3" role="alert">
                                @foreach (var error in phoneNumberError.Errors)
                                {
                                    <span class="text-danger">@error.ErrorMessage</span>
                                }
                            </div>
                        }
                    </div>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="input-group mb-5 w-75">
                        <span class="input-group-text" id="basic-addon1">
                            <label for="seats">Couverts</label>
                        </span>
                        <input type="number" min="0" max="10" class="form-control" placeholder="Nombre de personne"
                            aria-label="seats" aria-describedby="basic-addon1" asp-for="seats">
                    </div>
                    @if (ViewData.ModelState.TryGetValue("seats", out var seatsError) && seatsError.Errors.Any())
                    {
                        <div class="alert alert-danger mb-3" role="alert">
                            @foreach (var error in seatsError.Errors)
                            {
                                <span class="text-danger">@error.ErrorMessage</span>
                            }
                        </div>
                    }
                </div>
                <div class="row d-flex justify-content-center">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    <button type="submit" class="btn btn-primary w-50">Envoyer</button>
                    
                </div>
            </form>
        </div>
    </div>
        <div class="col-12 col-md-6">
            <img class="img-fluid" src="https://picsum.photos/id/292/650/620" alt="">
        </div>
    </div>
</div>
@model LaCroute.Models.BookingModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutAdmin";
}

<div class="container">
    <div class="text-center">

        <div class="linkcontainer">
            <a class="btn link" asp-area="" asp-controller="Home" asp-action="index">Retour au site</a>
        </div>

        <h1>Supprimer la réservation</h1>

        <h2>Etes-vous sur de vouloir supprimer cette réservation ?</h2>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Date
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.date)
                </dd>
                <dt class="col-sm-2">
                    Heure
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.time)
                </dd>
                <dt class="col-sm-2">
                    Prénom Nom
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.name)
                </dd>
                <dt class="col-sm-2">
                    Numéro de téléphone
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.phoneNumber)
                </dd>
                <dt class="col-sm-2">
                    Nombre de couverts
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.seats)
                </dd>
                <dt class="col-sm-2">
                    Date de création
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.created_at)
                </dd>
                <dt class="col-sm-2">
                    Date de modification
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.updated_at)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="id" />
                <input type="submit" value="Supprimer" class="btn btn-admin" /> 
                <a asp-action="Index" class="btn btn-admin">Retour</a>
            </form>
        </div>
    </div>
</div>
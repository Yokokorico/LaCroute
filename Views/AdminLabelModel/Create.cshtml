@model LaCroute.Models.LabelModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="text-center">

        <h1>Ajouter un label</h1>

        <hr />
        <div class="row">
            <div class="col-md-4 mx-auto">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Intitulé</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Svg" class="control-label">SVG</label>
                        <input asp-for="Svg" class="form-control" />
                        <span asp-validation-for="Svg" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Créer" class="btn btn-admin m-2" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-admin m-2">Retour</a>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

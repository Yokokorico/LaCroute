@model LaCroute.Models.ReviewModel

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-6 col-md-6 ">
            <form asp-action="Review" method="post" class="border border-primary p-5">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Name">Nom</label>
                        <input type="text" id="Name" name="Name" id="Name" asp-for="Name" required/>
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="form-group col-md-6">
                        <label for="Title">Titre</label>
                        <input type="text" id="Title" name="Title" id="Title" asp-for="Title" required/>
                        <span asp-validation-for="Title" class="text-danger"></span>

                    </div>
                    <div class="form-group col-md-6"></div>
                    <div class="row">
                        <div class="rate">
                            <input type="radio" class="d-none" id="star5" asp-for="Rating" name="Rating" value="5" required/>

                            <label for="star5" title="text">5 stars</label>
                            <input type="radio" class="d-none" id="star4" asp-for="Rating" name="Rating" value="4" required/>

                            <label for="star4" title="text">4 stars</label>
                            <input type="radio" class="d-none" id="star3" asp-for="Rating" name="Rating" value="3" required/>

                            <label for="star3" title="text">3 stars</label>
                            <input type="radio" class="d-none" id="star2" asp-for="Rating" name="Rating" value="2" required/>

                            <label for="star2" title="text">2 stars</label>
                            <input type="radio" class="d-none" id="star1" asp-for="Rating" name="Rating" value="1" required/>
                            <label for="star1" title="text">1 star</label>

                            <span asp-validation-for="Rating" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="form-row">
                        <textarea id="Description" class="w-100" name="Description" asp-for="Description" placeholder="Ecrivez votre message ici" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>

                    </div>
                    <button class="btn btn-primary" type="submit">Soumettre</button>
                </form>
            </div>

        </div>


    </div>


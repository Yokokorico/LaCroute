@model LaCroute.Models.TypeModel

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutAdmin";
}

<div class="container">
    <div class="text-center">

        <div class="linkcontainer">
            <a href="@Url.Action("Menu", "Home")" class="btn link">Voir le menu</a>
        </div>

        <h1>Détail du type</h1>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Intitulé
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    Date de création
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Created_at)
                </dd>
                <dt class="col-sm-2">
                    Date de mise à jour
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Updated_at)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-admin mb-2">Editer</a>
            <a asp-action="Index" class="btn btn-admin mb-2">Retour</a>
        </div>
    </div>
</div>